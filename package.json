{
	"name": "node-pdu",
	"version": "2.0.2",
	"description": "Creates and parses SMS PDU strings",
	"license": "MIT",
	"author": "jackkum",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/jackkum/node-pdu.git"
	},
	"homepage": "https://github.com/jackkum/node-pdu",
	"publishConfig": {
		"provenance": true
	},
	"packageManager": "pnpm@10.12.4",
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@types/node": "^18.19.115",
		"eslint": "9.30.1",
		"eslint-config-prettier": "10.1.5",
		"prettier": "3.6.2",
		"typedoc": "~0.28.7",
		"typedoc-github-theme": "~0.3.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "8.35.1",
		"vitest": "^3.2.4"
	},
	"scripts": {
		"build": "pnpm build:lib && pnpm build:docs",
		"build:lib": "tsc",
		"build:docs": "typedoc src --plugin typedoc-github-theme",
		"lint": "pnpm lint:format && pnpm lint:code && pnpm lint:tests",
		"lint:format": "prettier --check .",
		"lint:code": "eslint src",
		"lint:tests": "eslint tests",
		"test": "vitest run --dir ./tests/",
		"test:watch": "vitest watch --dir ./tests/"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"keywords": [
		"pdu",
		"sms"
	]
}
